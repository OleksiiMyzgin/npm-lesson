{
  "name": "npm-lesson",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "dependencies": {},
  "devDependencies": {
    "autoprefixer": "^9.6.1",
    "browser-sync": "^2.26.7",
    "eslint": "^6.1.0",
    "imagemin-cli": "^5.0.0",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^6.0.0",
    "parallelshell": "^3.0.2",
    "postcss-cli": "^6.1.3",
    "rimraf": "^2.6.3",
    "stylelint": "^10.1.0",
    "svg-sprite-generator": "0.0.7",
    "svgo": "^1.3.0",
    "uglify-js": "^3.6.0"
  },
  "scripts": {
    "clean": "rimraf dist",
    "scss": "node-sass --output-style compressed -o dist/css src/scss",
    "autoprefixer": "postcss -u autoprefixer --autoprefixer.browsers '&gt; 5%, ie 9' -r dist/css/*",
    "lint": "eslint src/js",
    "lint:scss": "stylelint src/scss/*.scss --syntax scss",
    "uglify": "mkdir -p dist/js && uglifyjs src/js/*.js -m -o dist/js/app.js && uglifyjs src/js/*.js -m -c -o dist/js/app.min.js",
    "imagemin": "imagemin src/images/* --out-dir=dist/images",
    "icons": "svgo -f src/images/icons -o dist/images/icons && svg-sprite-generate -d dist/images/icons -o dist/images/icons/sprite.svg",
    "serve": "browser-sync start --server --files \"dist/css/*.css, dist/js/*.js, **/*.html, !node_modules/**/*.html\"",
    "build:css": "run-s lint:scss scss autoprefixer",
    "build:js": "run-s lint uglify",
    "build:images": "run-s imagemin icons",
    "build": "run-s build:*",
    "watch:css": "onchange 'src/scss/*.scss' -- run-s build:css",
    "watch:js": "onchange 'src/js/*.js' -- run-s build:js",
    "watch:images": "onchange 'src/images/**/*' -- run-s build:images",
    "watch": "run-p serve watch:*",
    "postinstall": "run-s build watch"
  },
  "keywords": [],
  "author": "Alex Myzgin",
  "license": "ISC"
}